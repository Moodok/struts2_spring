<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="lab" namespace="/" extends="struts-default">

        <action name="home" class="homeAction">
            <result name="success">WEB-INF/jsp/home.jsp</result>
        </action>

        <action name="loginPage" class="loginAction">
            <result name="success">/WEB-INF/jsp/login.jsp</result>
        </action>

        <!--
        Stub to prevent logging
        'org.apache.struts2.components.ServletUrlRenderer.warn No configuration found for the specified action:
        'login' in namespace: '/'.
        Form action defaulting to 'action' attribute's literal value.'
        /login    is spring security default url to send login:password params
        -->
        <action name="login">
            <result>/WEB-INF/jsp/login.jsp</result>
        </action>

    </package>


</struts>